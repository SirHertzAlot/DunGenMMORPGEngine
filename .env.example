
# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mmorpg
MONGODB_TEST_URI=mongodb://localhost:27017/mmorpg_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Unity ECS Configuration (Future)
UNITY_SERVER_HOST=localhost
UNITY_SERVER_PORT=7777

# Game Configuration
MAX_PLAYERS_PER_REGION=100
DEFAULT_REGION_ID=starter_region
PLAYER_SAVE_INTERVAL=30000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_COMBAT_SYSTEM=true
ENABLE_GUILD_SYSTEM=true
ENABLE_TRADE_SYSTEM=false
ENABLE_PVP=true
